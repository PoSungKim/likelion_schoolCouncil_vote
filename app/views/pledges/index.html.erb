<p id="notice"><%= notice %></p>

<h1>Pledges</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Content</th>
      <th>Title2</th>
      <th>Content2</th>
      <th>Title3</th>
      <th>Content3</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pledges.each do |pledge| %>
      <tr>
        <td><%= pledge.title %></td>
        <td><%= pledge.content %></td>
        <td><%= pledge.title2 %></td>
        <td><%= pledge.content2 %></td>
        <td><%= pledge.title3 %></td>
        <td><%= pledge.content3 %></td>
        <td><%= link_to 'Show', pledge %></td>
        <td><%= link_to 'Edit', edit_pledge_path(pledge) %></td>
        <td><%= link_to 'Destroy', pledge, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

